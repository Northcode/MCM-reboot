<Window x:Class="MCM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MC Manager" Height="440" Width="567" BorderThickness="0">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="Tabs">
            <TabItem Header="Main">
                <Grid Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="212"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Margin="0" Grid.Column="0">
                        <Label Content="Backup List"></Label>
                    </ListBox>
                    <Label Content="Backup Info" FontFamily="Consolas" FontSize="14" Height="30" Grid.Column="1" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="More stuff here">
            </TabItem>
        </TabControl>
        <Grid HorizontalAlignment="Left" Grid.Row="1" Width="559" Margin="0,7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="57*"/>
                <ColumnDefinition Width="137*"/>
                <ColumnDefinition Width="106*"/>
                <ColumnDefinition Width="101*"/>
                <ColumnDefinition Width="158*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="54*"/>
            </Grid.RowDefinitions>
            <Label Content="Type:" Grid.RowSpan="1" Grid.Row="0"></Label>
            <ComboBox x:Name="cbxType" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="120" Grid.Row="0" Grid.Column="1" SelectedIndex="0">
                <Label Content="Vanilla" Background="White" BorderThickness="0"/>
                <Label Content="Dev Builds" Background="White" BorderThickness="0"/>
                <Label Content="Modpack" Background="White" BorderThickness="0"/>
            </ComboBox>
            <Label Content="Version:" Grid.RowSpan="1" Grid.Row="1"></Label>
            <ComboBox x:Name="cbxVersion" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top" Width="120" Grid.Row="1" Grid.Column="1" SelectedIndex="0">
                <Label Content="1.5.2" Background="White" BorderThickness="0"/>
            </ComboBox>
            <Label Content="Login status:" Grid.Column="2" Grid.Row="0"/>
            <Label Content="Multiplayer status:" Grid.Column="2" Grid.Row="1"></Label>
            <Label Content="(bool)" Grid.Column="3" Grid.Row="0"></Label>
            <Label Content="(bool)" Grid.Column="3" Grid.Row="1"></Label>
            <ComboBox Grid.Column="4" Grid.Row="1" HorizontalAlignment="Right" Width="130" Margin="0,9,18,18" SelectedIndex="0">
                <Label Content="Start Minecraft" BorderThickness="0"></Label>
                <Button Content="Default Minecraft Launcher" Background="White" BorderThickness="0" Click="Button_Click" HorizontalAlignment="Stretch"></Button>
                <Button Content="Custom MCM Launcher" Background="White" BorderThickness="0" Click="Button_Click_1" HorizontalAlignment="Stretch"></Button>
            </ComboBox>
        </Grid>
    </Grid>
</Window>
